@page
@model WebApp.Pages.UsersModel
@{
}
<script src="~/js/pages/users.js?v=3"></script>
<h1>Users List</h1>

<div class = "bs-docs-section">

    <div clas= "row"> 
        <legend>User lsit</legend>
        <div class="col-lg-12">
            <table id="tblUsers" class="display" style="width:100%">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>User Code</th>
                        <th>Nombre</th>
                        <th>Email</th>
                        <th>Birth Date</th>
                        <th>Status</th>
                    </tr>
                </thead>
            </table>

        </div>
    </div>
    <div class="row">
        <div class="col-lg-6">
            <div class="bs-component">
                <form>
                    <fieldset>
                        <legend>User Form</legend>

                        <div class="form-group">
                            <label for="txtId" class="form-label mt-4">User ID</label>
                            <input id="txtId" readonly type="text" class="form-control">
                        </div>

                        <div class="form-group">
                            <label for="txtUserCode" class="form-label mt-4">User Code</label>
                            <input id="txtUserCode" type="text" class="form-control">
                        </div>

                        <div class="form-group">
                            <label for="txtName" class=" form-label mt-4">Name</label>
                            <input id="txtName" type="text" class="form-control">
                        </div>

                        <div class="form-group">
                            <label for="txtEmail" class="form-label mt-4">Email</label>
                            <input id="txtEmail" type="email" class="form-control">
                        </div>

                        <div class="form-group">
                            <label for="txtBDate" class="form-label mt-4">Birth Date</label>
                            <input id="txtBDate" type="date" class="form-control">
                        </div>

                        <div class="form-group">
                            <label for="txtStatus" class="form-label mt-4">Status</label>
                            <input id="txtStatus" type="text" class="form-control">
                        </div>

                        <div class="form-group">
                            <label for="txtPassword" class="form-label mt-4">Password</label>
                            <input id="txtPassword" type="password" class="form-control">
                        </div>
                    </fieldset>
                </form>

                <form>
                    <div class="form-group">
                        <label for="txtbuscarId" class="form-label mt-4">Digite el ID que deseas buscar</label>
                        <input id="txtbuscarId" type="text" class="form-control">
                        <button id="btnBuscarId" type="button" class="btn btn-outline-secondary mt-2">Buscar por ID</button>
                    </div>

                    <div class="form-group">
                        <label for="txtRetrieveByEmail" class="form-label mt-4">Digite el Email que deseas buscar</label>
                        <input id="txtRetrieveByEmail" type="text" class="form-control">
                        <button id="btnRetrieveByEmail" type="button" class="btn btn-outline-secondary mt-2">Buscar por Email</button>
                    </div>

                    <div class="form-group">
                        <label for="txtRetrieveByUserCode" class="form-label mt-4">Digite el userCode que deseas buscar</label>
                        <input id="txtRetrieveByUserCode" type="text" class="form-control">
                        <button id="btnRetrieveByUserCode" type="button" class="btn btn-outline-secondary mt-2">Buscar por UserCode</button>
                    </div>
                </form>
                <br>
                <button id="btnCreate" class="source-button btn btn-primary btn-xs" type="button">Save</button>
                <button id="btnUpdate" class="source-button btn btn-info btn-xs" type="button">Update</button>
                <button id="btnDelete" class="source-button btn btn-danger btn-xs" type="button">Delete</button>
            </div>

    </div>

</div>
